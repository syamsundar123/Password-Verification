        Label(window,text="Hint:",bg="lightsalmon",font=('Helvetica','21','bold')).place(relx=0.6,rely=0.1)
        Label(window,text="Other Country",bg="lightsalmon",font=('Helvetica','20')).place(relx=0.65,rely=0.1)
